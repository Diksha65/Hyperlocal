<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/new_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_store_header" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textStyle="bold"
            android:textAllCaps="true" android:textSize="30sp" android:typeface="sans"
            android:fontFamily="sans-serif-black"/>
    <Button
            android:text="@string/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_store" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/store_phoneno_value"
            app:layout_constraintVertical_bias="0.945"/>
    <TextView
            android:text="@string/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/store_name" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/new_store_header" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.053"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName|textAutoComplete"
            android:ems="10"
            android:id="@+id/store_name_value" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/store_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.093" android:hint="@string/store_name_hint"/>
    <TextView
            android:text="@string/store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/store_address" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/store_name_value" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.055"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/store_address_value" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/store_address" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.093" android:hint="@string/address_hint"/>
    <TextView
            android:text="@string/store_phoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/store_phoneno" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/store_address_value" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.057"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/store_phoneno_value" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/store_phoneno" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.093" android:hint="@string/phoneno_hint"/>
</android.support.constraint.ConstraintLayout>